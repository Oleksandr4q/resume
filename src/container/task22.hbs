<div>
  {{#with page_header}}
    <h1 class='text-center'>{{title}}</h1>
    <p class='text-center'>{{description}}</p>
  {{/with}}
</div>
<div class='card'>
  <div class='card-body'>
    {{#with section}}
      {{#with about_us}}
        {{#with title_list}}
          <div class='display-6 text-end'> {{main}}</div>
          <br />
          <h2 class='text-end'>{{sub}}</h2>
        {{/with}}
        <button
          class='btn btn-outline-info'
        >{{button.text}}</button>
      {{/with}}
      <br />
      <br />
      <br />
      <div class='card'>
        <div class='card-body'>
          {{#with advantage}}
            <div class='display-5'>{{title}}</div>
            <br />
            <div class='card'>
              <div class='card-body'>
                {{#with efficiency}}
                  <div class='display-4'>{{title}}</div>
                  <br />
                  <h6>{{sub_title}}</h6>
                  <p>{{description}}</p>
                  <button
                    class='btn btn-outline-warning'
                  >{{button}}</button>
                {{/with}}
              </div>
            </div>
            <br />
            <div class='card'>
              <div class='card-body'>
                {{#with innovation}}
                  <div
                    class='display-4 text-center'
                  >{{title}}</div>
                  <h6 class='text-center'>{{sub_title}}</h6>
                  <p class='text-center'>{{description}}</p>
                  <button
                    class='btn btn-outline-warning'
                  >{{button}}</button>
                {{/with}}
              </div>
            </div>
            <br />
            <div class='card'>
              <div class='card-body'>
                {{#with collaboration}}
                  <div
                    class='display-4 text-end'
                  >{{title}}</div>
                  <h6 class='text-end'>{{sub_title}}</h6>
                  <p class='text-end'>{{description}}</p>
                  <button
                    class='btn btn-outline-warning'
                  >{{button}}</button>
                {{/with}}
              </div>
            </div>
          {{/with}}
        </div>
      </div>
      <br />
      <div class='card'>
        <div class='card-body'>
          {{#with agreement}}
            <div class='display-5'>{{title}}</div>
            <br />
            {{#with info}}
              <h5>{{sub_title}}</h5>
              <br />
              {{#with detail}}
                <ul>
                  <p>{{text}}</p>
                  <button
                    class='btn btn-success'
                  >{{button}}</button>
                </ul>
              {{/with}}
            {{/with}}
          {{/with}}
        </div>
      </div>
    {{/with}}
  </div>
</div>