<div>
  <h1>{{name}}</h1>
  <em>{{description}}</em>
  <ul>
    <li>{{category}} / {{price}}$ </li>
  </ul>
  <hr />
  <br />
  {{#with features}}
    <span class='badge text-bg-primary'>Processor</span>
    {{#with processor}}
      <ul class='list-group list-group-horizontal'>
        <li class='list-group-item'>{{brand}}</li>
        <li class='list-group-item'>{{model}}</li>
        <li class='list-group-item'>{{speed}}</li>
        <li class='list-group-item'>{{cores}}</li>
        <li class='list-group-item'>{{cache}}</li>
      </ul>
    {{/with}}
    <span class='badge text-bg-primary'>Memory</span>
    {{#with memory}}
      <ul class='list-group list-group-horizontal'>
        <li class='list-group-item'>{{type}}</li>
        <li class='list-group-item'>{{size}}</li>
        <li class='list-group-item'>{{speed}}</li>
      </ul>
    {{/with}}
    <span class='badge text-bg-primary'>Storage</span>
    {{#with storage}}
      <ul class='list-group list-group-horizontal'>
        <li class='list-group-item'>{{type}}</li>
        <li class='list-group-item'>{{size}}</li>
      </ul>
    {{/with}}
    <span class='badge text-bg-primary'>Display</span>
    {{#with display}}
      <ul class='list-group list-group-horizontal'>
        <li class='list-group-item'>{{size}}</li>
        <li class='list-group-item'>{{resolution}}</li>
        <li class='list-group-item'>{{technology}}</li>
        <li class='list-group-item'>{{color_space}}</li>
        <li class='list-group-item'>{{brightness}}</li>
        <li class='list-group-item'>{{refresh_rate}}</li>
      </ul>
    {{/with}}
    <span class='badge text-bg-primary'>Graphics</span>
    {{#with graphics}}
      <ul class='list-group list-group-horizontal'>
        <li class='list-group-item'>{{brand}}</li>
        <li class='list-group-item'>{{model}}</li>
        <li class='list-group-item'>{{memory}}</li>
      </ul>
    {{/with}}
    <span class='badge text-bg-primary'>Ports</span>
    {{#each ports}}
      <ul class='list-group list-group-horizontal-xxl'>
        <li class='list-group-item'>{{type}}
          / ({{count}})</li>
        <li class='list-group-item'>{{features}}</li>
      </ul>
    {{/each}}
    <span class='badge text-bg-primary'>Battery</span>
    {{#with battery}}
      <ul class='list-group list-group-horizontal'>
        <li class='list-group-item'>{{type}}</li>
        <li class='list-group-item'>{{capacity}}</li>
        <li class='list-group-item'>{{life}}</li>
      </ul>
    {{/with}}
    <span class='badge text-bg-primary'>Weight</span>
    <ul class='list-group list-group-horizontal'>
      <li class='list-group-item'>{{weight}}</li>
    </ul>
    <span class='badge text-bg-primary'>Dimensions</span>
    {{#with dimensions}}
      <ul class='list-group list-group-horizontal'>
        <li class='list-group-item'>{{height}}</li>
        <li class='list-group-item'>{{width}}</li>
        <li class='list-group-item'>{{depth}}</li>
      </ul>
    {{/with}}
    <span class='badge text-bg-primary'>Operating system</span>
    <ul class='list-group list-group-horizontal'>
      <li class='list-group-item'>{{operating_system}}</li>
    </ul>
    <span class='badge text-bg-primary'>Accessories</span>
    {{#each accessories}}
      <ul class='list-group list-group-horizontal'>
        <li class='list-group-item'>{{name}}</li>
        <li class='list-group-item'>{{price}}$</li>
      </ul>
    {{/each}}
  {{/with}}
</div>