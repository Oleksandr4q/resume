{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
    {{#with main}}
  <main>
    <section>
        {{> title title="Work history" big=true}}
      <div>
        <ul>
          {{#each works}}

              <li>
                <div>{{position}}</div>
                <br />

                <div>
                  {{duration.from}} - {{#if duration.to}} {{duration.to}} {{else}}(досі працюємо){{/if}}
                  </div>
                <br />

                <div>{{> link text=company.name href=company.url blank=true noLine=true}}</div>
                <br />

                <div>
                  <strong>Projects ({{projectamount}})</strong>
                  </div>
                <br />

                <ul>
                  {{#each projects}}
                  <li>
                <div>{{> link text=name href=url blank=true noLine=true}}</div> 
                <br />

                <div>{{about}}</div>
                <br />
                <div>
                  <em><strong>Project stacks ({{stackamount}})</strong></em>
                </div>
                <br />

                <ul>
                  {{#each stacks}}
                    <li><div>{{name}}</div></li>
                  {{/each}}
                </ul>

                  <br />

                  <div>
                  <em><strong>Project awards ({{awardamount}})</strong></em>
                </div>

                  <br />
                  
                  <ul>
                {{#each awards}}
                  <li><div>{{name}}</div></li>
                {{/each}}
                  </ul> 

                <br />  
                  </li>
                  {{/each}}
                </ul>
              </li>

              <br />
          {{/each}}
        </ul>
      </div>
    </section>
  </main>
    {{/with}}
</div>

