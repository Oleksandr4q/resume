{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

<div class='p-5'>
  <div class='row'>
    {{#with header}}
      {{#with title}}
        <h1 class='col-9 mb-5'>{{name}}</h1>
        <b class='col-3 mb-5'>{{description}}</b>
      {{/with}}
    {{/with}}
  </div>
  {{#with main}}
    {{#with project}}
      <h2>{{title}}</h2>
      <p>{{description}}</p>
    {{/with}}
    {{#each buttons}}
      <div class='col-2'>
        <a
          class='btn btn-primary my-1'
          href='{{link}}'
        >{{text}}</a>
      </div>
    {{/each}}
  {{/with}}
</div>

